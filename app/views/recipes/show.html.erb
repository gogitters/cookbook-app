<a href="/recipes/<%= @recipe.id %>/edit">Edit this Recipe</a>

<%= form_tag "/recipes/#{@recipe.id}", method: :delete do %>
  <input type="submit" value="Destroy recipe!!!">
<% end %>

<%= link_to "Destroy recipe", "/recipes/#{@recipe.id}", method: :delete, data: {confirm: "If you must..."} %>
<%= button_to "Destroy recipe", "/recipes/#{@recipe.id}", method: :delete %>
<a href="/recipes/<%= @recipe.id %>" data-confirm="Are you sure...? With HTML ONLY!!!" data-method="delete">Destroy this recipe with HTML only</a>